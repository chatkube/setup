#!/bin/bash
TIMESTAMP=$(date +%s)
SUBSCRIPTION_OUTPUT_FILE=Subscription_${TIMESTAMP}
az account list | jq -r '.[] | select(.state == "Enabled" and .isDefault == true)' > ${SUBSCRIPTION_OUTPUT_FILE}
SUBSCRIPTION_ID=$( cat ${SUBSCRIPTION_OUTPUT_FILE} | jq -r .id )
TENANT_ID=$( cat ${SUBSCRIPTION_OUTPUT_FILE} | jq -r .tenantId )
SERVICE_PRICIPAL_NAME=ChatKubeServicePrincipal_${TIMESTAMP}
az ad sp create-for-rbac --name ${SERVICE_PRICIPAL_NAME} --role contributor --scope /subscriptions/${SUBSCRIPTION_ID} > ${SERVICE_PRICIPAL_NAME}
cat $SERVICE_PRICIPAL_NAME  | jq -r ". | {NAME: .displayName, SUBSCRIPTION_ID: \"${SUBSCRIPTION_ID}\", TENANT_ID: .tenant, CLIENT_ID: .appId, CLIENT_SECRET: .password }" > RESULT_${TIMESTAMP}
cat RESULT_${TIMESTAMP}
npm install --save qrcode
cat RESULT_${TIMESTAMP} | node_modules/qrcode/bin/qrcode --small -v 16
